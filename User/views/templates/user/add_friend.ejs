<%- include('../header') %>
<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-5">
                <h4 class="page-title">Add Friend</h4>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xlg-9 col-md-7" style="margin-top:20px">
      <div class="card">
        <div class="card-body">
          <form class="form-horizontal form-material" method="post" action="/gogaga/adding">
            <div class="form-group">
              <label class="col-md-12">First Name</label>
              <div class="col-md-12">
                <input type="text" value="" name="first_name" placeholder="Enter Friend First Name" class="form-control form-control-line" required>
              </div>
            </div>
            <div class="form-group">
                <label class="col-md-12">Last Name</label>
                <div class="col-md-12">
                  <input type="text" value="" name="last_name" placeholder="Enter Friend Last Name" class="form-control form-control-line" required>
                </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <button class="btn btn-success" type="submit" style="background-color:#d33f8d">Add Friend</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
<%- include('../footer') %>
